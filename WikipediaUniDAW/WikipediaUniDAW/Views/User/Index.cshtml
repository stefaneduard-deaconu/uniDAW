@{
    ViewBag.Title = "Users List";
}

<h2 class="text-center">@ViewBag.Title</h2>
<br />

@if (TempData.ContainsKey("userCrudMessage")) {
    <h3 class="alert alert-info text-center" role="alert">@ViewBag.userCrudMessage</h3>
}

@foreach (var user in ViewBag.UsersList) {
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <i class="glyphicon glyphicon-user"></i>
                        @user.UserName
                    </h3>
                </div>
                <div class="panel-body">
                    <a class="btn btn-primary" href="/User/Show/@user.Id"> Show Details</a>
                </div>
            </div>
        </div>
    </div>
    <br />
}