@model WikipediaUniDAW.Models.Article
@{
    ViewBag.Title = "Articles of " + ViewBag.CategoryName + " category";
}

<h2 class="text-center">@ViewBag.Title</h2>
<br /><br />

@foreach (var article in ViewBag.Articles) {
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"> @article.Title </h3>
                </div>
                <div class="panel-body">
                    <div class="truncate">
                        <div>
                            @Html.Raw(article.GetFirstChapter().Content)
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <a class="btn btn-primary" href="/Article/Show/@article.ArticleId"> Show Article </a>
                </div>
            </div>
        </div>
    </div>
    <br />
}