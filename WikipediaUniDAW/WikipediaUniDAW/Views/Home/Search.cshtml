@model WikipediaUniDAW.Models.Article

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (string word in ViewBag.Words)
{
    @word
}

<section id="articles">
    <header class="text-center">
        <h3>What you searched:</h3>
        <h2> "@ViewBag.Query"</h2>
        <br class="divider" />
        <h3 style="margin-bottom: 20px;">What we found:</h3>
    </header>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            @foreach (WikipediaUniDAW.Models.Article article in ViewBag.articles)
            {
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h3 class="panel-title"> @article.Title </h3>
                            </div>
                            <div class="panel-body">
                                <div class="truncate">
                                    <div>
                                        @Html.Raw(article.GetFirstChapter().Content)
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <a class="btn btn-primary" href="/Article/Show/@article.ArticleId"> Show Article </a>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            }
        </div>
    </div>
</section>
